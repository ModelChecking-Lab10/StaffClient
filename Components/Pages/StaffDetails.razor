@page "/staffdetails/{id}"
@page "/staffdetails"
@rendermode InteractiveServer
@inherits StaffDetailsBase

@if (employee == null || employee.Department == null || employee.Gender == null){
  <div class="spinner"></div>
} else{
  <div class="row justify-content-center m-3">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-header text-center">
          <h1>@employee.FirstName @employee.LastName</h1>
        </div>
        <div class="card-body text-center">
          <h4>Employee ID: @employee.EmployeeId</h4>
          <h4>Email: @employee.Email</h4>
          <h4>Department: @employee.Department.DepName</h4>
          <h4>Gender: @employee.Gender.GenName</h4>
        </div>
        <div class="card-footer text-center">
          <a href="/stafflist" class="btn btn-primary m-1">Back</a>
          <button class="btn btn-danger m-1" @onclick="DeleteEmployee">Delete</button>
        </div>
      </div>
    </div>
  </div>
}